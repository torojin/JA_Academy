package whileex;

public class WhileEx1 {

	public static void main(String[] args) {
		
		int n = 10;
		
		while(true) {
			System.out.println(n);
			n--;
			if(n==0)
				break;
		}
		/*
		int n = 0;
		
		while(n<5) {
			++n;
			System.out.println("hello java");
		}
		*/
		
		/*
		int n = 0;
		
		while(true) {	// while(true or false)
			++n;
			if(n<=5) {
				System.out.println("hello java");
			} else
				break;
		}*/
	}

}
