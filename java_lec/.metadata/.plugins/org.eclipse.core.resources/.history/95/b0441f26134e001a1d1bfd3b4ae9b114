package animal;

import java.util.Scanner;

/*
 * Cat, Dog, Duck, Fish
 * cat은 야옹 네발로 걸어감
 * dog 멍멍 네발
 * Duck 꽥꽥 두발
 * Fish 소리가 없다 헤엄쳐서 다닌다
 * 공통점이 없으니 default 소리가 없다
 * default 네발
 */
//정적 바인딩 :컴파일 시점에 호출 함수 결정
public class AnimalMain1 {

	public static void main(String[] args) {
		//입력할 수 있게 scanner 
		Scanner sc=new Scanner(System.in);
		
		int n;
		Dog dd=null; Cat cc=null; Fish ff=null; Duck dk=null;
		
		while(true) {
			System.out.print("1.Dog 2.Cat 3.Fish 4.Duck 5.Exit\n선택 : ");
			n=sc.nextInt();
			//선택을 위한 switch문
			switch(n){
			case 1: dd=new Dog(); dd.speak(); dd.walk(); break;
			case 2: dd=new Cat(); dd.speak(); dd.walk(); break;
			case 3: dd=new Fish(); dd.speak(); dd.walk(); break;
			case 4: dd=new Duck(); dd.speak(); dd.walk(); break;
			default: System.out.println("***종료합니다***"); Exit(); dd.speak(); dd.walk(); break;
			}
		}
	}

}
