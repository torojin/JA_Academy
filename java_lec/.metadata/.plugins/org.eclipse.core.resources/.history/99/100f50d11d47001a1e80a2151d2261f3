package step02_연산자;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

/**
 * 
 * @author admin
 * 콘솔 : 표준 입출력 장치 (키보드, 모니터)
 * System.in : 키보드
 * 
 * . 의 2가지 의미
 * 1. 포함의 의미
 * 2. 입력의 의미 : 함수의 입력으로 사용
 */
public class InputTest1 {

	public static void main(String[] args) throws IOException {
		// 키보드 입력을 받는 방법 중 가장 속도가 빠름		 
		InputStreamReader isr = new InputStreamReader(System.in);
		BufferedReader br = new BufferedReader(isr); // 임의의 기억공간 br을 만듦(버퍼메모리)
	
		System.out.print("이름을 입력하세요 : ");
		String name = br.readLine(); // readLine() : 줄단위로 읽어들임 -> String만 이렇게 쓰고 나머지는 parse붙여줘야 함
		
		System.out.print("성별을 입력하세요 : ");
		char gender = br.readLine().charAt(0); 
		/* 
		 *  객체 안에 readLine이라는 함수 그 안에 입력된 결과로 잡힌게 charAt(0)
		 *  char형은 단어\r\n의 형태로 컴파일 됨 그래서 그 중 0번째 값을 읽으라는 의미에서 charAt(0)을 씀
		 *  
		 *  charAt(i) : 문자 1개 추출, i는 추출하고자 하는 값의 인덱스
		 *  입력은 charAt(i)앞에 기술
		 */
		System.out.println("한글과 컴퓨터",charAt(2));
		System.out.print("나이를 입력하세요 : ");
		int age = Integer.parseInt(br.readLine()); // 문자열을 parseInt로 포장해주는 것. 매개변수로 전달됨
		
		System.out.print("체중을 입력하세요 : ");
		float weight = Float.parseFloat(br.readLine());
		
		System.out.print("키를 입력하세요 : ");
		double tall = Double.parseDouble(br.readLine());
		
		System.out.println("이름 : "+name);
		System.out.println("성별 : "+gender);
		System.out.println("나이 : "+age);
		System.out.println("체중 : "+weight);
		System.out.println("신장 : "+tall);
	}

}
